<html lang="en">
  <head>

    <meta charset="utf-8" />
    <link rel="icon" href="https://cdn.glitch.global/45c45797-2ff0-423e-bc54-f6ad858df8e7/favicon.ico?v=1674881824762" />
    <link rel="apple-touch-icon" sizes="180x180" href="https://cdn.glitch.global/45c45797-2ff0-423e-bc54-f6ad858df8e7/apple-touch-icon.png?v=1674881824470">
    <link rel="icon" type="image/png" sizes="32x32" href="https://cdn.glitch.global/45c45797-2ff0-423e-bc54-f6ad858df8e7/favicon-32x32.png?v=1674881825051">
    <link rel="icon" type="image/png" sizes="16x16" href="https://cdn.glitch.global/45c45797-2ff0-423e-bc54-f6ad858df8e7/favicon.ico?v=1674881824762">
    <link rel="manifest" href="https://cdn.glitch.global/45c45797-2ff0-423e-bc54-f6ad858df8e7/site.webmanifest?v=1674881825624">
    
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{{seo.title}}</title>

    <!-- Meta tags for SEO and social sharing -->
    <link rel="canonical" href="{{seo.url}}" />
    <meta name="description" content="{{seo.description}}" />
    <meta property="og:title" content="{{seo.title}}" />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="{{seo.url}}" />
    <meta property="og:description" content="{{seo.description}}" />
    <meta property="og:image" content="{{seo.image}}" />
    <meta name="twitter:card" content="summary" />

    <!-- Import the webpage's stylesheet -->
    <link rel="stylesheet" href="/style.css" />

    <!-- This is a handlebars IF statement
         Checking for a custom "color" parameter from server.js -->

  </head>
  <body>
    <div class="wrapper">
      <div class="content" role="main">
        <h1>
          Flynn Lunch Menu
        </h1>
        {{#each menu}}
          {{#if this.day}}
            <div class="dateRow">
              <span class="dayName">{{this.day}}</span>
              <span class="date">({{this.date}})</span>
            </div>
            <ul>
              {{#each this.lunch}}
                <li class="item">{{this.MenuItemDescription}}</li>
              {{/each}}
            </ul>

          {{/if}}
        {{/each}}
        
        <img width="200" src="https://cdn.glitch.global/45c45797-2ff0-423e-bc54-f6ad858df8e7/flynn-logo.png?v=1674882162076" />

      </div>
    </div>
  </body>
</html>